<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
        >
    <Button
            android:id="@+id/main_start_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />
    <TextView android:id="@+id/main_point_to_value"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:layout_above="@id/main_start_button"/>
    <TextView android:id="@+id/main_point_to_text"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="server point to"
              android:padding="10dp"
              android:textColor="@android:color/black"
              android:layout_above="@id/main_point_to_value"/>
</RelativeLayout>

